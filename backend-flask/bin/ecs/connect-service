#!/usr/bin/bash

if [ -z "$1" ]; then
    echo "-- NO CONTAINER_NAME PROVIDED --"
    echo "Usage: ./ecs/connect-service CONTAINER TASK_ID"
    exit 1
fi

if [ -z "$2" ]; then
    echo "-- NO TASK ID PROVIDED --"
    echo "Usage: ./ecs/connect-service CONTAINER TASK_ID"
    exit 1
fi

CONTAINER_NAME=$1
TASK_ID=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive